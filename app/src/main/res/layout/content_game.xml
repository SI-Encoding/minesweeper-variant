<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TableLayout
        android:id="@+id/Tr"
        android:layout_width="604dp"
        android:layout_height="306dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="55dp"

        android:alpha="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TableLayout>

    <TextView
        android:id="@+id/Find"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:text="Found 0 of 6 barrels"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Tr"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Scanner"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:text="# Scans used: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Tr"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/IdGames"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginStart="96dp"
        android:text="Times Played: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Tr"
        app:layout_constraintStart_toEndOf="@+id/Find" />

</androidx.constraintlayout.widget.ConstraintLayout>